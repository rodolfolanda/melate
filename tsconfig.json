{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "target": "es2022",
        "module": "nodenext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "coverage", "**/*.config.ts"]
}